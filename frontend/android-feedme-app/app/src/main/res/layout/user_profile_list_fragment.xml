<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.UserFoodPrefListFragment">

        <HorizontalScrollView
            android:id="@+id/horizontal_scrollview_profile_settings_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_food_tag_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/small_recview_margin"
                android:layout_marginEnd="@dimen/small_recview_margin"
                tools:listitem="@layout/product_detail_tag_item">
            </androidx.recyclerview.widget.RecyclerView>

        </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>