<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dietry_tag_card_view"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_cardview_padding"
        android:background="@drawable/custom_background_tags"
        android:clickable="true"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:cardElevation="@dimen/tiny_card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_dietry_tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_text_margin"
            android:layout_marginEnd="@dimen/medium_text_margin"
            android:layout_marginTop="@dimen/small_text_margin"
            android:layout_marginBottom="@dimen/small_text_margin"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            android:text="@string/dietry_tag_label"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>