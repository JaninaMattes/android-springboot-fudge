<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expiratoin_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/light_grey"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/tiny_card_elevation"
    card_view:cardCornerRadius="10dp">

    <FrameLayout
        android:id="@+id/expiration_list_item_colour"
        android:background="@color/salmon_red"
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/small_text_margin"
            android:layout_marginEnd="@dimen/small_text_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expiringproductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/small_text_margin"
                android:layout_marginRight="@dimen/small_text_margin"
                android:layout_marginTop="@dimen/small_text_margin"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/dummy_product"/>

            <TextView
                android:id="@+id/expiringproductdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_text_margin"
                android:layout_marginRight="@dimen/small_text_margin"
                android:layout_marginBottom="@dimen/small_text_margin"
                android:textColor="@color/light_grey"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/exp_date"/>
        </LinearLayout>

</androidx.cardview.widget.CardView>