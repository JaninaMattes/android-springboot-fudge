<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/expiring_product_item_card_view"
        android:padding="@dimen/medium_cardview_margin"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="@dimen/medium_cardview_margin"
        android:layout_marginEnd="@dimen/medium_cardview_margin"
        android:layout_marginBottom="@dimen/large_cardview_margin"
        android:layout_marginTop="@dimen/tiny_cardview_margin"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        android:background="@drawable/custom_background_round_corners"
        card_view:cardElevation="@dimen/medium_card_elevation"
        android:clickable="true"
        card_view:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_text_margin"
            android:layout_marginStart="@dimen/small_text_margin"
            android:layout_marginEnd="@dimen/small_text_margin"
            android:layout_marginBottom="@dimen/small_text_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_expiring_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center|bottom"
                android:textSize="@dimen/text_medium"
                android:layout_marginLeft="@dimen/small_text_margin"
                android:layout_marginRight="@dimen/small_text_margin"
                android:layout_marginTop="@dimen/small_text_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="@string/expiration_dummy_product_name"/>

            <TextView
                android:id="@+id/expiring_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="@dimen/small_text_margin"
                android:layout_marginLeft="@dimen/small_text_margin"
                android:layout_marginRight="@dimen/small_text_margin"
                android:layout_marginBottom="@dimen/small_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small"
                android:gravity="center_horizontal"
                android:text="@string/expires_in"/>

            <TextView
                android:id="@+id/text_expiring_product_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="@dimen/small_text_margin"
                android:layout_marginRight="@dimen/small_text_margin"
                android:layout_marginBottom="@dimen/small_text_margin"
                android:textColor="@color/red_200"
                android:textSize="@dimen/text_medium"
                android:gravity="center_horizontal"
                android:text="@string/expiration_dummy_value"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
