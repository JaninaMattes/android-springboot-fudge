<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FeedMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D3ECD4CB</item>
        <item name="colorPrimaryVariant">@color/red_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/salmon_red</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Primary Font -->
        <item name="android:textViewStyle">@font/roboto_light</item>
        <item name="android:buttonStyle">@font/roboto_light</item>
    </style>

    <!-- Splash Screen Theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- Login Screen Theme-->
    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- Date Picker Theme-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerPosButtonTheme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerNegButtonTheme</item>
    </style>

    <!-- Date Picker Button Pos Theme -->
    <style name="DatePickerPosButtonTheme" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Date Picker Button Neg Theme -->
    <style name="DatePickerNegButtonTheme" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!--Button Theme-->
    <style name="ButtonTheme">
        <item name="colorPrimary">@color/red_200</item>
        <item name="android:layout_marginBottom">@dimen/medium_btn_margin</item>
        <item name="android:layout_marginTop">@dimen/large_btn_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--unimportant Button Theme-->
    <style name="unimportantButtonTheme">
        <item name="colorPrimary">@color/theme_creme_dark</item>
        <item name="android:layout_marginBottom">@dimen/medium_btn_margin</item>
        <item name="android:layout_marginTop">@dimen/large_btn_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Export Button Theme-->
    <style name="ExportButtonTheme">
        <item name="colorPrimary">@color/red_200</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="iconSize">@dimen/text_small</item>
    </style>

    <!--Progress Bar -->
    <style name="ProgressBar">
        <item name="android:layout_marginTop">@dimen/extreme_margin</item>
        <item name="android:layout_marginBottom">@dimen/extreme_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>